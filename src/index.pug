doctype html
html
    head
        meta(charset='utf-8', name='viewport', content='width=device-width, initial-scale=1')
        title Simon Game
        //- inject:css
        //- {{name}}:{{ext}}
        //- endinject
    body
        noscript
            div#ns Please enable Javascript. This site will not function properly without it.
        main.lighting
            div.outerCircle
                div#tl.quarter.tl
                div#tr.quarter.tr
                div#bl.quarter.bl
                div#br.quarter.br
            div.innerCircle
                div.simon Simon
                div#start.start
                    span.label Start
                div#strict.strict
                    span.label Strict
                div#strictLight.strictLight
                div.display
                    span#display
                div.powerStrip
                    span ON
                    div#power.power
                        div#powerSlider.powerSlider
                    span OFF
            div.vertical-border
            div.horizontal-border
        footer
            div.stickyNote
              p
                a(href='https://github.com/CharmedSatyr/simon_game' rel='nofollow' target='_blank') Designed and coded by CharmedSatyr
              p
                a(href='https://github.com/CharmedSatyr/simon_game/blob/master/LICENSE' rel='nofollow' target='_blank') GNU Public License v3.0
